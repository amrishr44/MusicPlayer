<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/big_cv_layout"
    android:layout_width="match_parent"
    android:layout_height="254dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/big_cv_bg"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cassettes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/big_cv_small_album_art"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_margin="2dp"
            android:background="#FFF"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cassettes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/big_cv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/space_mono"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/big_cv_artist_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/space_mono"
                android:singleLine="true"
                android:textColor="@color/notification_artist"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="159dp"
        android:background="@color/lighter_black"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/big_cv_previous"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/previous_white" />

        <ImageView
            android:id="@+id/big_cv_pause"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/pause_white" />

        <ImageView
            android:id="@+id/big_cv_next"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/next_white" />

        <ImageView
            android:id="@+id/big_cv_stop"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/stop_white" />
    </LinearLayout>
</FrameLayout>