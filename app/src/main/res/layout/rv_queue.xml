<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rv_queue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#99000000">

     <ImageView
         android:id="@+id/queue_drag"
         android:layout_width="50dp"
         android:layout_height="match_parent"
         android:layout_gravity="center_vertical"
         android:layout_marginStart="15dp"
         android:clickable="true"
         android:focusable="true"
         app:srcCompat="@drawable/drag_white" />

    <TextView
        android:id="@+id/queue_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="80dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/space_mono"
        android:freezesText="true"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/queue_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/space_mono"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/notification_artist"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/queue_song_popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        app:srcCompat="@drawable/popup_menu" />

    <TextView
        android:id="@+id/queue_song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/eczar"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/notification_artist"
        android:textSize="13sp"
        android:textStyle="bold" />
</FrameLayout>
