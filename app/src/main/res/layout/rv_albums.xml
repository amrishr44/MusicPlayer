<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/colorDark"
    android:padding="3dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/albums_album_art"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:background="#FFF"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cassettes" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000">

        <TextView
            android:id="@+id/albums_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/space_mono"
            android:gravity="center|start|center_horizontal"
            android:isScrollContainer="false"
            android:keepScreenOn="false"
            android:maxLines="2"
            android:singleLine="false"
            android:text="TextView"
            android:textColor="#FFF"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/albums_popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            app:srcCompat="@drawable/popup_menu" />
    </FrameLayout>


</LinearLayout>