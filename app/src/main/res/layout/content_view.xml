<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/content_view_album_art"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_margin="2dp"
        android:background="#FFF"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cassettes" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="68dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/space_mono"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#FFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/content_view_artist_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/space_mono"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/notification_artist"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/content_view_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="100dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/previous_white" />

    <ImageView
        android:id="@+id/content_view_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="70dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/pause_white" />


    <ImageView
        android:id="@+id/content_view_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/next_white" />

    <ImageView
        android:id="@+id/content_view_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/stop_white" />



</FrameLayout>