<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:id="@+id/volume_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#99000000"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/now_playing_volume"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/volume" />

        <SeekBar
            android:id="@+id/volume_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="40dp"
            android:maxHeight="5dp"
            android:minWidth="270dp"
            android:progressDrawable="@drawable/song_seekbar_style"
            android:splitTrack="false"
            android:thumb="@drawable/song_seekbar_thumb" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/speed_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Speed:"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/programmer_green"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/speed_0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="0.25"
            android:textColor="@color/notification_artist" />

        <TextView
            android:id="@+id/speed_0.50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="0.50"
            android:textColor="@color/notification_artist" />

        <TextView
            android:id="@+id/speed_0.75"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="0.75"
            android:textColor="@color/notification_artist" />

        <TextView
            android:id="@+id/speed_1.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="1.00"
            android:textColor="@color/notification_artist" />

        <TextView
            android:id="@+id/speed_1.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="1.25"
            android:textColor="@color/notification_artist" />

        <TextView
            android:id="@+id/speed_1.50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="1.50"
            android:textColor="@color/notification_artist" />

        <TextView
            android:id="@+id/speed_1.75"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="1.75"
            android:textColor="@color/notification_artist" />

        <TextView
            android:id="@+id/speed_2.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/eczar"
            android:gravity="center"
            android:text="2.00"
            android:textColor="@color/notification_artist" />

    </LinearLayout>

</FrameLayout>